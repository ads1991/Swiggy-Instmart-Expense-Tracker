{
  "manifest_version": 3,
  "name": "Swiggy & Instamart Expense Tracker",
  "version": "1.0.0",
  "description": "Track your Swiggy and Instamart expenses with detailed analytics",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.swiggy.com/*",
    "https://*.swiggy.com/*",
    "http://localhost:5175/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:5175/*"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.swiggy.com/*", "https://*.swiggy.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
